<adonisControls:AdonisWindow  
        x:Class="Jaywapp.Toasket.Shell"
        xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d" Title="MainWindow" Height="450" Width="900">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="0, 0, 10, 0">
            <Button Content="Home" Margin="0, 0, 0, 5" Command="{Binding ActiveHomeViewCommand}"/>
            <Button Content="Pick" Margin="0, 0, 0, 5" Command="{Binding ActiveMatchViewCommand}"/>
            <Button Content="Box" Margin="0, 0, 0, 5" Command="{Binding ActiveBasketViewCommand}"/>
            <Button Content="Analysis" Margin="0, 0, 0, 5" Command="{Binding ActiveAnalysisViewCommand}"/>
        </StackPanel>
        <UserControl Grid.Column="1" Content="{Binding ActiveView}"/>
    </Grid>
</adonisControls:AdonisWindow>
